<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="POJOs.Employe" table="EMPLOYE" schema="EQUIPE112">
        <id name="matricule">
            <column name="MATRICULE" sql-type="number(7)" precision="7"/>
        </id>
        <property name="courriel">
            <column name="COURRIEL" sql-type="varchar2(50)" length="50"/>
        </property>
        <property name="motDePasse">
            <column name="MOT_DE_PASSE" sql-type="varchar2(20)" length="20"/>
        </property>
        <property name="telephone">
            <column name="TELEPHONE" sql-type="number(10)" precision="10"/>
        </property>
        <property name="nom">
            <column name="NOM" sql-type="varchar2(25)" length="25"/>
        </property>
        <property name="prenom">
            <column name="PRENOM" sql-type="varchar2(25)" length="25"/>
        </property>
        <property name="adresseCivique">
            <column name="ADRESSE_CIVIQUE" sql-type="varchar2(50)" length="50"/>
        </property>
        <property name="dateNaissance">
            <column name="DATE_NAISSANCE" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>